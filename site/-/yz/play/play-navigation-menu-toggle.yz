<title>play-navigation-menu-toggle</title>

<template mode=closed>
	<ui-button
		icon=pointer
		:iconstate="$.hidden ? 'down' : 'up'"
		@click="$.hidden = !$.hidden"
	></ui-button>
</template>

<script>
effect(() => {
	const hidden = $.hidden
	const navigationMenu = document.querySelector('navigation-menu')
	if(!navigationMenu) return
	navigationMenu.hidden = hidden
})
</script>

