:host {
	display: inline-block; padding: 1rem 0 0; margin: -1rem -.5rem -.5rem -.5rem;
	position: relative;
	background-color: var(--background-color);
	border: .5rem solid var(--sub-background-color); border-top-width: 0;
	border-radius: 0 0 10rem 10rem;
}
:host::after {
	content: "";
	width: 1.5rem; height: 1.5rem;
	position: absolute; inset: 0 100% auto auto;
	background: no-repeat center / cover
		radial-gradient(circle 1.5rem at bottom left, transparent 0 100%, var(--background-color) 100%);
}
