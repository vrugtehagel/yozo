<title>play-creations-toggle</title>

<template mode=closed>
	<ui-button
		icon=pointer
		:iconstate="$.hidden ? 'right' : 'left'"
		@click="$.hidden = !$.hidden"
	></ui-button>
</template>
<script>

effect(() => {
	const hidden = $.hidden
	const playCreations = document.querySelector('play-creations')
	if(!playCreations) return
	playCreations.hidden = hidden
})
</script>

