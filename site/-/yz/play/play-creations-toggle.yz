:host {
	display: inline-block; padding: 0 0 0 1.25rem;
	margin: -.5rem 0 -1rem -1rem;
	position: relative;
	background-color: var(--background-color);
	border: .5rem solid var(--sub-background-color); border-left-width: 0;
	border-radius: 0 10rem 10rem 0;
}
:host::after {
	content: "";
	width: 2rem; height: 2rem;
	position: absolute; inset: 100% auto auto 0;
	background: no-repeat center / cover
		radial-gradient(circle 2rem at bottom right, transparent 0 100%, var(--background-color) 100%);
}
