<title>play-layout</title>

<template mode=closed>
	<ui-dropdown
		icon=layout
		:iconstate="window.$settings.$play.layout"
	>
		<ui-button
			#for="{layout, label} of $.layouts"
			icon=layout
			:iconstate="layout"
			:aria-label="label"
			@click="$.select(layout)"
		></ui-button>
	</ui-dropdown>
</template>

<script>
$.select = layout => {
	window.$settings.$play.layout = layout
	elements.uiDropdown.open = false
}

$.layouts = [
	{layout: 'single', label: 'Single window'},
	{layout: 'side-by-side', label: 'Two windows side-by-side'},
	{layout: 'triple-split', label: 'Triple split'},
	{layout: 'stack', label: 'Stack two windows'},
	{layout: 'quartiles', label: 'Four quartiles'}
]
</script>

<style>
:host {
	display: inline-block;
	position: relative;
}
ui-button:hover {
	background-color: var(--highlight-color);
}
::part(dropdown){
	flex-direction: row; gap: .25rem;
	right: -7rem;
}
</style>
